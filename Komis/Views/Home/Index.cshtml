@model Komis.ViewModels.HomeVM

@{ 
    Layout = "_Layout";
}

    @foreach (var item in Model.Samochody)
    {
        <div class=" col-sm-4 col-lg4 col-md-4">
            <div class="thumbnail">
                <img src="@item.MiniaturaUrl"  alt=""/>
                <div class="caption">
                    <h3 class="pull-right"> @item.Cena.ToString("c")</h3>
                    <h3>@item.Marka - @item.Model - @item.RokProdukcji</h3>
                    <h4>Przebieg : @item.Przebieg</h4>
                    <h4>Pojemnosc : @item.Pojemnosc</h4>
                    <h4>Moc : @item.Moc</h4>
                    <p> @item.Opis</p>
                </div>
           </div>
        </div>
    }
