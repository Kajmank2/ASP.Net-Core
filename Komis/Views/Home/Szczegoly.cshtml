@model Samochod

<h2>@Model.Marka - @Model.Model</h2>
<div class="thumbnail">
    <img alt="@Model.Marka" src="@Model.ZdjecieUrl" />
    <div class="caption-full">
        <h3 class="pull-right"> @Model.Cena.ToString("c")</h3>
        <h3>
            <a asp-controller="Home" asp-action="Szczegoly" asp-route-id="@Model.Id">@Model.Marka</a> -@Model.Model - @Model.RokProdukcji
        </h3>
        <h4>@Model.RokProdukcji</h4>
        <h4>@Model.Przebieg</h4>
        <h4>@Model</h4>
        <p>@Model.Opis</p>
    </div>
</div>
